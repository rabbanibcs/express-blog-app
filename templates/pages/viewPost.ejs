<%- include ('../components/header.ejs') %>
    <!-- header 
   ================================================== -->
    <%- include ('../components/nav.ejs') %>


        <!-- content
   ================================================== -->
        <section id="content-wrap" class="blog-single">
            <div class="row">
                <div class="col-twelve">

                    <article class="format-standard">

                        <div class="content-media">
                            <div class="post-thumb">
                                <img
                                    src="data:image/<%=post.image.contentType%>;base64,<%=post.image.data.toString('base64')%>">
                            </div>
                        </div>

                        <div class="primary-content">

                            <h1 class="page-title">
                                <%=post.title%>
                            </h1>

                            <ul class="entry-meta">
                                <li class="date"><%=post.createdAt.toLocaleString('en-US',{ year: "numeric" ,
                                        month: "short" , day: "numeric" , hour:"numeric", })%></li>
                                <li class="cat"><a href="">
                                        <%=post.category%>
                                    </a><a href="">Design</a></li>
                            </ul>

                            <p class="lead">
                                <%=post.content%>
                            </p>



                            <p class="tags">
                                <span>Tagged in :</span>
                                <a href="#">orci</a><a href="#">lectus</a><a href="#">varius</a><a href="#">turpis</a>
                            </p>

                            <div class="author-profile">
                                <%if(post.user.image.data!=undefined){%>
                                    <img
                                        src="data:image/<%=post.user.image.contentType%>;base64,<%=post.user.image.data.toString('base64')%>">
                                    <%}%>
                                        <div class="about">
                                            <h4><a href="#">
                                                    <%=post.user.name%>
                                                </a></h4>
                                            <p>
                                                <%=post.user.about%>
                                            </p>

                                            <ul class="author-social">
                                                <li><a href="#">Facebook</a></li>
                                                <li><a href="#">Twitter</a></li>
                                                <li><a href="#">GooglePlus</a></li>
                                                <li><a href="#">Instagram</i></a></li>
                                            </ul>
                                        </div>
                            </div> <!-- end author-profile -->

                        </div> <!-- end entry-primary -->

                        <div class="pagenav group">
                            <%if(post.previous!=undefined){%>
                                <div class="prev-nav">
                                    <a href="/post/view?id=<%= post.previous._id%>" rel="prev">
                                        <span>Previous</span>
                                        <%=post.previous.title%>
                                    </a>
                                </div>

                                <%}%>
                                    <%if(post.next!=undefined){%>
                                        <div class="next-nav">
                                            <a href="/post/view?id=<%= post.next._id%>" rel="next">
                                                <span>Next</span>
                                                <%=post.next.title%>

                                            </a>
                                        </div>
                                        <%}%>

                        </div>

                    </article>


                </div> <!-- end col-twelve -->
            </div> <!-- end row -->



            <%- include ('../components/comments.ejs') %>



        </section> <!-- end content -->


        <!-- footer
   ================================================== -->
        <%- include ('../components/footer.ejs') %>